{
  "env": {
    "browser": true,
    "es6": true,
    "node": true 
  },
  "extends": "airbnb",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "TweenLite": false,
    "Linear": false
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-multi-assign": "off",
    "object-curly-newline": "off",
    "react/prop-types": "off",
    "react/destructuring-assignment": "off",
    "react/state-in-constructor": "off",
    "prefer-rest-params": "off",
    "func-names": "off",
    "no-prototype-builtins": [0],
    "padded-blocks": [0],
    "import/prefer-default-export": "off",
    "import/no-unresolved": "off",
    "comma-dangle": [0],
    "max-len": [0],
    "no-unused-expressions": [0],
    "quotes": [2, "single"],
    "strict": [2, "never"],
  },
  "overrides": [
    {
      "files": "**/*.js",
      "rules": {
        "quotes": ["error", "single"]
      }
    }
  ]
}
